---
import ProfComponent from "../components/ProfComponent.astro";
import DisciComponent from "../components/DisciComponent.astro";
import { getCollection, getEntry } from "astro:content";

// Pega todos os arquivos md de uma pasta especificada na pasta content
const profs = await getCollection('professores');
const disciplinas = await getCollection('disciplinas');

// Pega um único arquivo md
const infoGeneric = await getEntry('pagInicial', 'pagina-inicial');
const equipamento = await getEntry('equipamentos', 'equipamentos');
---

<!DOCTYPE html>
<html lang="pt-br">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>PHI Lab</title>

    <link rel="stylesheet" href="styles/style.css">

    <style>
        .slider-container {
            width: 80%;
            margin: auto;
            position: relative;
            overflow: hidden;
        }

        .slides {
            display: flex;
        }

        .slide {
            min-width: 100%;
            display: none; /* Ocultar todos os slides inicialmente */
        }

        .slide.active {
            display: block; /* Mostrar apenas o slide ativo */
        }

        .slide img {
            width: 100%;
        }

        .prev, .next {
            position: absolute;
            top: 50%;
            transform: translateY(-50%);
            background-color: rgba(0, 0, 0, 0.5);
            color: white;
            border: none;
            padding: 10px;
            cursor: pointer;
        }

        .prev {
            left: 10px;
        }

        .next {
            right: 10px;
        }
    </style>
</head>

<body>
    <header>
        <div class="navbar">
            <div class="nav1">
                <a href="#sobre">
                    <h3 id="phiHeader">PHI Lab</h3>
                </a>
            </div>

            <div class="nav2">
                <ul>
                    <li><a href="#professores">Professores</a></li>
                    <li><a href="#disciplinas">Disciplinas</a></li>
                    <li><a href="#equipamentos">Equipamentos</a></li>
                </ul>
            </div>

            <div class="menu1">
                <div class="menu2" onclick="menu1()">
                    <span class="menuBar" id="bar1"></span>
                    <span class="menuBar" id="bar2"></span>
                    <span class="menuBar" id="bar3"></span>
                </div>
            </div>
        </div>
    </header>

    <ul class="nav3">
        <li><a href="#professores">Professores</a></li>
        <li><a href="#disciplinas">Disciplinas</a></li>
        <li><a href="#equipamentos">Equipamentos</a></li>
    </ul>

    <div class="paginaInicial">
        <div class="title">
            <h1>Laboratório de Pneumática e Hidráulica</h1>
            <h4>(PHI Lab)</h4>
        </div>

        <div class="imgInicial">
            <img class="img1" src="/fundos/1B.jpeg" alt="">
            <img class="img2" src="/fundos/2H.jpeg" alt="">
            <img class="img2" src="/fundos/3A.jpeg" alt="">
            <img class="img1" src="/fundos/4B.jpeg" alt="">
        </div>
    </div>

    <div id="sobre">
        <h2>Sobre o Laboratório</h2>
        <p>{infoGeneric.data.sobre}</p>

        <div class="imgSobre">
            <img class="img3" src={infoGeneric.data.img1} alt="" />
            <img class="img4" src={infoGeneric.data.img2} alt="" />
            <img class="img3" src={infoGeneric.data.img3} alt="" />
        </div>
    </div>

    <div id="professores">
        <h2>Professores</h2>
        <p class="p">{infoGeneric.data.sobreProf}</p>

        <div class="cardProf">
            {profs.map((prof) => <ProfComponent frontmatter={prof.data} />)}
        </div>
    </div>

    <div id="disciplinas">
        <h2>Disciplinas que utilizam o PHI Lab</h2>
        <div class="cursos">
            {disciplinas.map((disciplina) => <DisciComponent frontmatter={disciplina.data} />)}
        </div>
    </div>

    <div id="equipamentos">
        <h2>Equipamentos</h2>
        <div class="conteudoEquipamentos">
            <div class="opcoes">
                <button id="bcp" onclick="loadImages(0)">{equipamento.data.equipamentos[0].nome}</button>
                <button id="bch" onclick="loadImages(1)">{equipamento.data.equipamentos[1].nome}</button>
                <button id="bmf" onclick="loadImages(2)">{equipamento.data.equipamentos[2].nome}</button>
            </div>

            <div class="container">
                <div class="slider-container">
                    <div class="slides" id="slider"></div>
                    <button class="prev" onclick="moveSlide(-1)">&#10094;</button>
                    <button class="next" onclick="moveSlide(1)">&#10095;</button>
                </div>

                <div class="infoBCP">
                    <h2>{equipamento.data.equipamentos[0].nome}</h2>
                    <p>{equipamento.data.equipamentos[0].descricao}</p>
                </div>

                <div class="infoBCH" style="display: none;">
                    <h2>{equipamento.data.equipamentos[1].nome}</h2>
                    <p>{equipamento.data.equipamentos[1].descricao}</p>
                </div>

                <div class="infoBMF" style="display: none;">
                    <h2>{equipamento.data.equipamentos[2].nome}</h2>
                    <p>{equipamento.data.equipamentos[2].descricao}</p>
                </div>
            </div>
        </div>
    </div>

    <img src="/public/images/equipamentos/equipamentos/0/imagens/" alt="">

    <footer>
        <div class="fabrica">
            <img src="fundos/fabrica.png" alt="">
        </div>

        <div class="if">
            <img src="fundos/logo-if.png" alt="">
        </div>
    </footer>

    <script is:inline>
        let currentSlide = 0;
    let slides = [];

    function loadImages(pasta) {
      const slider = document.getElementById('slider');
      slider.innerHTML = ''; // Limpar o conteúdo anterior

      for (let i = 0; i < 3; i++) { // Supondo que temos 3 imagens por pasta
        const slide = document.createElement('div');
        slide.classList.add('slide');
        slide.innerHTML = `<img src="/images/equipamentos/equipamentos/${pasta}/imagens/${i}.jpeg" alt="Imagem ${i + 1}">`;
        slider.appendChild(slide);
      }

      slides = document.querySelectorAll('.slide');
      currentSlide = 0;
      showSlide(currentSlide);
    }

    function showSlide(index) {
      slides.forEach(slide => slide.style.display = 'none');
      if (slides.length > 0) {
        slides[index].style.display = 'block';
      }
    }

    function moveSlide(step) {
      if (slides.length === 0) return;
      currentSlide += step;
      if (currentSlide < 0) {
        currentSlide = slides.length - 1;
      } else if (currentSlide >= slides.length) {
        currentSlide = 0;
      }
      showSlide(currentSlide);
    }

    loadImages(0); // Carreg

        function menu1() {
            let bar1 = document.querySelector("#bar1");
            let bar2 = document.querySelector("#bar2");
            let bar3 = document.querySelector("#bar3");

            if (bar1.classList.contains("active")) {
                bar1.classList.remove("active");
                bar1.classList.add("reverse");

                bar2.classList.remove("active");
                bar2.classList.add("reverse");

                bar3.classList.remove("active");
                bar3.classList.add("reverse");
            } else {
                bar1.classList.remove("reverse");
                bar1.classList.add("active");

                bar2.classList.remove("reverse");
                bar2.classList.add("active");

                bar3.classList.remove("reverse");
                bar3.classList.add("active");
            }
            menu2();
        }

        function menu2() {
            let nav3 = document.querySelector(".nav3");

            if (nav3.style.display === "none" || nav3.style.display === "") {
                nav3.style.display = "flex";
            } else {
                nav3.style.display = "none";
            }
        }
    </script>

</body>

</html>
